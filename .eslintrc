{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "quotes": ["warn", "single"],
    "indent": ["warn", 4, { "SwitchCase": 1 } ]
  },
  "env": {
    "node": true
  },
  "plugins": [
    "babel"
  ]
}
